<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Access to files in the external storage root directory -->
    <external-path
        name="external_storage_root"
        path="." />

    <!-- Access to files in the Download folder -->
    <external-path
        name="external_download_folder"
        path="Download/" />

    <!-- Access to your app's internal cache directory -->
    <cache-path
        name="internal_cache"
        path="." />

    <!-- Access to your app's internal files directory -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Include any other specific directories if needed -->
</paths>

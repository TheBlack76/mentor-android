<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/fragment_medium_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
      style="@style/StyleMedium"
        android:id="@+id/tvName"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="General Question 1"
        android:drawableEnd="@drawable/ic_down_arrow"
        android:drawableTint="@color/black"
        android:paddingVertical="@dimen/small_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/StyleRegular"
        android:id="@+id/tvTagline"
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="@dimen/small_spacing"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:text="Loreum ipsum is a dummy text. Loreum ipsum is a dummy text.Loreum ipsum is a dummy text. Loreum ipsum is a dummy text. Loreum Ipsum is a dummy text"
        android:textColor="@color/colorEditTextStroke"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>


</androidx.constraintlayout.widget.ConstraintLayout>
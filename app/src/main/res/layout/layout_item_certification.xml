<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/fragment_item_margin">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdvDocument"
        android:layout_width="98dp"
        android:layout_height="98dp"
        app:placeholderImage="@drawable/ic_document"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:id="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/sdvDocument"
        app:layout_constraintStart_toStartOf="@+id/sdvDocument"
        app:layout_constraintEnd_toEndOf="@+id/sdvDocument"
        android:maxLines="2"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/colorPrimaryText"
        android:text="Document Name"
        android:layout_marginTop="@dimen/line_spacing_extra"/>

</androidx.constraintlayout.widget.ConstraintLayout>
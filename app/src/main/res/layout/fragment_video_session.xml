<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/subscriberView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/publisherView"
            android:layout_width="108dp"
            android:layout_height="138dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/drawable_small_round_corner"
            android:backgroundTint="@color/white"
            android:elevation="8dp"
            android:padding="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvPleaseWait"
        style="@style/StyleRegular"
        android:clickable="false"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/st_please_wait_for_another_person_to_join"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clIconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/ic_controls_bg"
        android:paddingHorizontal="20dp"
        android:paddingVertical="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/ivMute"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/fragment_medium_margin"
            android:background="@drawable/background_color_circle_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_unmute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivSpeaker" />

        <ImageView
            android:id="@+id/ivSpeaker"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/background_color_circle_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_speaker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivDisableVideo"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/fragment_medium_margin"
            android:background="@drawable/background_color_circle_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_enable_video"
            app:layout_constraintBottom_toBottomOf="@+id/ivMute"
            app:layout_constraintStart_toEndOf="@+id/ivMute"
            app:layout_constraintTop_toTopOf="@+id/ivMute" />

        <ImageView
            android:id="@+id/ivRejectCall"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/fragment_medium_margin"
            android:background="@drawable/background_color_circle_selector"
            android:src="@drawable/ic_accept_call"
            app:layout_constraintBottom_toBottomOf="@+id/ivCycleCamera"
            app:layout_constraintStart_toEndOf="@+id/ivCycleCamera"
            app:layout_constraintTop_toTopOf="@+id/ivCycleCamera" />

        <ImageView
            android:id="@+id/ivCycleCamera"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/fragment_medium_margin"
            android:background="@drawable/background_color_circle_selector"
            android:scaleType="centerInside"
            android:src="@drawable/ic_switch_camera"
            app:layout_constraintBottom_toBottomOf="@+id/ivDisableVideo"
            app:layout_constraintStart_toEndOf="@+id/ivDisableVideo"
            app:layout_constraintTop_toTopOf="@+id/ivDisableVideo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvConnecting"
        style="@style/StyleRegular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTransparent_90"
        android:clickable="false"
        android:elevation="4dp"
        android:gravity="center"
        android:text="@string/st_connecting"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>

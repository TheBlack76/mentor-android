<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/activity_horizontal_margin">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHeader"
                style="@style/StyleBold"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/line_spacing_extra"
                android:text="@string/st_sign_up"
                android:textColor="@color/colorPrimaryText"
                android:textSize="26sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTagline"
                style="@style/StyleRegular"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/fragment_item_margin"
                android:text="@string/st_fill_information_below_to_create_new_account"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvProfilePicture"
                android:layout_width="94dp"
                android:layout_height="94dp"
                app:roundAsCircle="true"
                android:layout_marginTop="@dimen/fragment_menu_item_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTagline"
                app:placeholderImage="@drawable/ic_user_placeholder" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddProfilePicture"
                style="@style/StyleMedium"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/fragment_item_margin"
                android:text="@string/st_add_profile_picture"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toEndOf="@+id/sdvProfilePicture"
                app:layout_constraintStart_toStartOf="@+id/sdvProfilePicture"
                app:layout_constraintTop_toBottomOf="@+id/sdvProfilePicture" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                style="@style/StyleMedium"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:text="@string/st_name"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddProfilePicture" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etName"
                style="@style/StyleInputEditText"
                android:layout_marginTop="@dimen/fragment_item_margin"
                android:maxLength="18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                style="@style/StyleMedium"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:text="@string/st_email_address"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                style="@style/StyleInputEditText"
                android:layout_marginTop="@dimen/fragment_item_margin"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail" />


            <TextView
                android:id="@+id/tvPhoneNumber"
                style="@style/StyleMedium"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/fragment_default_margin"
                android:text="@string/st_phone_number"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <View
                android:id="@+id/ivNumberView"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_edittext_height"
                android:layout_marginTop="@dimen/fragment_item_margin"
                android:background="@drawable/drawable_input_edittext_normal"
                app:layout_constraintEnd_toEndOf="@+id/tvPhoneNumber"
                app:layout_constraintStart_toStartOf="@+id/tvPhoneNumber"
                app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/tvCountryCode"
                style="@style/StyleMedium"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edittext_height"
                android:layout_marginStart="@dimen/fragment_item_margin"
                android:focusable="false"
                android:gravity="center"
                app:ccpDialog_allowSearch="true"
                app:ccpDialog_backgroundColor="@color/white"
                app:ccpDialog_textColor="@color/colorPrimaryText"
                app:ccp_contentColor="@color/colorPrimaryText"
                app:ccp_defaultNameCode="US"
                app:ccp_showArrow="false"
                app:ccp_showFlag="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="true"
                app:ccp_textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
                app:layout_constraintStart_toStartOf="@+id/ivNumberView"
                app:layout_constraintTop_toTopOf="@id/ivNumberView" />

            <ImageView
                android:id="@+id/ivCodeArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                app:layout_constraintBottom_toBottomOf="@+id/tvCountryCode"
                app:layout_constraintStart_toEndOf="@+id/tvCountryCode"
                app:layout_constraintTop_toTopOf="@+id/tvCountryCode" />

            <View
                android:id="@+id/viewNumber"
                android:layout_width="@dimen/divider_height"
                android:layout_height="0dp"
                android:layout_marginVertical="@dimen/fragment_default_margin"
                android:layout_marginStart="@dimen/fragment_item_margin"
                android:background="@color/colorEditTextStroke"
                app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
                app:layout_constraintStart_toEndOf="@id/ivCodeArrow"
                app:layout_constraintTop_toTopOf="@id/ivNumberView" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etNumber"
                style="@style/StyleInputEditText"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/fragment_medium_margin"
                android:layout_marginEnd="@dimen/fragment_small_margin"
                android:background="@color/transparent"
                android:inputType="number"
                android:maxLength="15"
                android:paddingHorizontal="@dimen/fragment_small_margin"
                android:paddingVertical="@dimen/fragment_default_margin"
                app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
                app:layout_constraintEnd_toEndOf="@id/ivNumberView"
                app:layout_constraintStart_toEndOf="@id/viewNumber"
                app:layout_constraintTop_toTopOf="@id/ivNumberView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmit"
                style="@style/StyleSubmitButton"
                android:layout_marginTop="@dimen/header_margin"
                android:text="@string/st_sign_up"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivNumberView" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/divider_height_medium"
                android:background="@color/colorSecondaryTextTransparent10"
                app:layout_constraintBottom_toBottomOf="@+id/tvContinueWith"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvContinueWith" />

            <TextView
                android:id="@+id/tvContinueWith"
                style="@style/StyleMedium"
                android:layout_marginTop="@dimen/header_margin"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/body_margin"
                android:text="@string/st_or_continue_with"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorSecondaryTextTransparent50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSubmit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoogle"
                android:layout_width="0dp"
                android:layout_height="@dimen/default_material_button_height"
                android:layout_marginTop="@dimen/header_margin"
                android:backgroundTint="@color/transparent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:stateListAnimator="@null"
                app:cornerRadius="32dp"
                app:icon="@drawable/ic_google"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvContinueWith"
                app:strokeColor="@color/colorButtonStroke"
                app:strokeWidth="@dimen/stroke_width" />

            <TextView
                android:id="@+id/tvSignInTagline"
                style="@style/StyleRegular"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/fragment_menu_item_margin"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/fragment_medium_margin"
                android:text="Donâ€™t have an account? Sign up"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toBottomOf="@+id/btnGoogle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
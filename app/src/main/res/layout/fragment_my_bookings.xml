<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpcoming"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_menu_item_margin"
        android:layout_marginEnd="@dimen/fragment_small_margin"
        android:backgroundTint="@color/colorPrimaryPeach"
        android:fontFamily="@font/font_roboto_medium"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:text="@string/st_upcoming_bookings"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnPast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="@dimen/stroke_width_small" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPast"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_margin"
        android:layout_marginStart="@dimen/fragment_small_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/font_roboto_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:text="@string/st_past_bookings"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnUpcoming"
        app:layout_constraintTop_toTopOf="@+id/btnUpcoming"
        app:strokeColor="@color/colorPrimaryText"
        app:strokeWidth="@dimen/stroke_width_small" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/fragment_default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUpcoming"/>

</androidx.constraintlayout.widget.ConstraintLayout>
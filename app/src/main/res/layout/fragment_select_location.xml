<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false">

    <View
        android:id="@+id/appBarView"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/colorPrimary"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="@+id/appBarView"
        app:layout_constraintTop_toTopOf="@+id/appBarView"
        app:layout_constraintBottom_toBottomOf="@+id/appBarView"/>

    <TextView
        android:id="@+id/tvLocation"
        style="@style/StyleInputEditText"
        android:layout_height="@dimen/header_margin"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:backgroundTint="@color/colorWhiteTransparent_30"
        android:background="@drawable/drawable_color_white_rounded_corners_solid"
        android:drawablePadding="@dimen/drawable_padding"
        android:gravity="center_vertical"
        android:hint="@string/st_enter_location"
        android:textColorHint="@color/white"
        android:paddingHorizontal="@dimen/body_margin"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_search"
        app:drawableTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="@+id/appBarView"
        app:layout_constraintBottom_toBottomOf="@id/appBarView"/>

    <com.google.android.gms.maps.MapView
        android:id="@+id/fgGoogleMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/textView1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarView">

    </com.google.android.gms.maps.MapView>

    <ImageView
        android:id="@+id/imgLocationPinUp"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/ic_location_marker"
        app:layout_constraintTop_toTopOf="@+id/fgGoogleMap"
        app:layout_constraintStart_toStartOf="@+id/fgGoogleMap"
        app:layout_constraintEnd_toEndOf="@+id/fgGoogleMap"
        app:layout_constraintBottom_toBottomOf="@+id/fgGoogleMap"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/StyleSubmitButton"
        android:layout_marginTop="@dimen/header_margin"
        android:text="@string/st_save"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent" />

</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
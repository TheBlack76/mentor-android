<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_top_round_corners"
    android:backgroundTint="@color/white"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvFilter"
        style="@style/StyleBold"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="@string/st_filter"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvReset"
        style="@style/StyleBold"
        android:layout_marginEnd="@dimen/fragment_default_margin"
        android:text="@string/st_reset_filter"
        android:textColor="@color/colorRed"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:padding="@dimen/line_spacing_extra"
        app:layout_constraintBottom_toBottomOf="@+id/tvFilter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvFilter" />

    <TextView
        android:id="@+id/tvDistanceLabel"
        style="@style/StyleMedium"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_menu_item_margin"
        android:text="@string/st_distance"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReset" />

    <TextView
        android:id="@+id/tvDistance"
        style="@style/StyleRegular"
        android:layout_marginEnd="@dimen/line_spacing_extra"
        android:gravity="end"
        android:text="0- 100+ km"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@+id/tvDistanceLabel"
        app:layout_constraintEnd_toEndOf="@+id/tvReset"
        app:layout_constraintTop_toTopOf="@+id/tvDistanceLabel" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/seekDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/fragment_medium_margin"
        android:valueFrom="0"
        android:valueTo="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDistanceLabel"
        app:thumbRadius="8dp"
        app:tickVisible="false"
        app:trackColorActive="@color/colorPrimary"
        app:trackColorInactive="#DCD7D7"
        app:trackHeight="3dp" />

    <TextView
        android:id="@+id/tvPriceLabel"
        style="@style/StyleMedium"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/body_margin"
        android:text="@string/st_price_range"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekDistance" />

    <TextView
        android:id="@+id/tvPrice"
        style="@style/StyleRegular"
        android:layout_marginEnd="@dimen/line_spacing_extra"
        android:gravity="end"
        android:text="0- $1000+"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintBottom_toBottomOf="@+id/tvPriceLabel"
        app:layout_constraintEnd_toEndOf="@+id/tvReset"
        app:layout_constraintTop_toTopOf="@+id/tvPriceLabel" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/seekPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/fragment_medium_margin"
        android:valueFrom="0"
        android:valueTo="1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPriceLabel"
        app:thumbRadius="8dp"
        app:thumbTint="@color/colorAccent"
        app:tickVisible="false"
        app:trackColorActive="@color/colorPrimary"
        app:trackColorInactive="#DCD7D7"
        app:trackHeight="3dp"
        app:values="@array/initial_age_range" />

    <TextView
        android:id="@+id/tvRatingLabel"
        style="@style/StyleMedium"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/body_margin"
        android:text="@string/st_ratings"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekPrice" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:layout_marginTop="@dimen/fragment_small_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRatingLabel"
        app:srb_clearRatingEnabled="true"
        app:srb_clickable="true"
        app:srb_drawableEmpty="@drawable/ic_star_unfilled"
        app:srb_drawableFilled="@drawable/ic_star"
        app:srb_isIndicator="false"
        app:srb_numStars="5"
        app:srb_scrollable="true"
        app:srb_starHeight="30dp"
        app:srb_starPadding="@dimen/line_spacing_extra"
        app:srb_starWidth="30dp"
        app:srb_stepSize="0.5" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/StyleSubmitButton"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_vertical_margin"
        android:layout_marginBottom="@dimen/header_margin"
        android:text="@string/st_apply_filter"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ratingbar" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/fragment_item_margin">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/sdvDocument"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/ic_service_img"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/rounded_corner_radius"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivPlayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_button"
        app:layout_constraintStart_toStartOf="@+id/sdvDocument"
        app:layout_constraintEnd_toEndOf="@+id/sdvDocument"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/sdvDocument"/>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:translationX="-8dp"
        android:src="@drawable/ic_delete_solid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sdvDocument"
        app:layout_constraintStart_toEndOf="@+id/sdvDocument"/>

</androidx.constraintlayout.widget.ConstraintLayout>
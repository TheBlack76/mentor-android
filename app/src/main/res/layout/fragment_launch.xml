<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="@dimen/fragment_vertical_margin"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            style="@style/StyleBold"
            android:id="@+id/tvHeading"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintBottom_toTopOf="@+id/tvTagline"
            android:text="@string/st_info_header_1"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginBottom="@dimen/fragment_item_margin"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

        <TextView
            style="@style/StyleRegular"
            android:id="@+id/tvTagline"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="@+id/tvHeading"
            app:layout_constraintBottom_toTopOf="@+id/indicatorView"
            android:text="@string/st_info_tagline_1"
            android:textColor="@color/colorPrimaryText"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/tvHeading"
            android:layout_marginBottom="118dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/indicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/colorGreyTransparent30"
            app:dotsCornerRadius="8dp"
            app:dotsSize="@dimen/small_spacing"
            app:dotsSpacing="@dimen/line_spacing_extra"
            app:dotsWidthFactor="4"
            android:visibility="gone"
            app:selectedDotColor="@color/colorPrimary"
            app:progressMode="true"
            app:layout_constraintTop_toTopOf="@+id/btnGetStarted"
            app:layout_constraintBottom_toBottomOf="@+id/btnGetStarted"
            app:layout_constraintStart_toStartOf="@+id/tvTagline"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStarted"
            style="@style/StyleSubmitButton"
            android:layout_height="40dp"
            android:text="@string/st_next"
            android:textColor="@color/white"
            android:background="@drawable/drawable_color_medium_rounded_corners_solid"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="@+id/tvTagline"
            android:drawablePadding="@dimen/fragment_medium_margin"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:paddingHorizontal="45dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
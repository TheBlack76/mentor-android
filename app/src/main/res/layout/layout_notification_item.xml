<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/body_margin"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notificattion_well"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/StyleBold"
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        app:layout_constraintStart_toEndOf="@+id/ivIcon"
        app:layout_constraintEnd_toStartOf="@+id/tvDate"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="@dimen/body_margin"
        android:text="Appoinment Confirmed"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/StyleRegular"
        android:id="@+id/tvDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        android:text=" Today, 4:25 PM"
        android:textColor="@color/colorEditTextStroke"
        android:textSize="@dimen/small_text_size"/>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/StyleRegular"
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/small_spacing"
        android:text="Your appoinment for Computer Repair on 5June,24 is confirmed"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/line_spacing_extra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/body_margin"
        android:backgroundTint="@color/colorPrimaryText"
        app:layout_constraintTop_toBottomOf="@+id/tvMessage"
        android:background="@drawable/drawable_dotted"/>

</androidx.constraintlayout.widget.ConstraintLayout>
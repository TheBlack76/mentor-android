<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/colorPrimaryPeach"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" >

        <CalendarView
            android:id="@+id/calenderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/MyDatePickerStyle" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSelectDate"
        style="@style/StyleBold"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/st_available_slots"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvEditSlots"
        style="@style/StyleBold"
        android:layout_width="0dp"
        android:background="@drawable/drawable_small_round_corner"
        android:paddingHorizontal="@dimen/fragment_item_margin"
        android:paddingVertical="@dimen/line_spacing_extra"
        android:text="@string/st_edit_slots"
        android:visibility="gone"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tvSelectDate"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/tvSelectDate" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:spanCount="2"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/fragment_default_margin"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditSlots" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ivNoData"
        style="@style/StyleRegular"
        android:src="@drawable/ic_calender_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="@string/st_no_slots_added"
        android:drawableTop="@drawable/ic_calender_placeholder"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/colorPrimaryText"
        android:drawablePadding="@dimen/fragment_medium_margin"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/fragment_double_margin"
        android:layout_height="@dimen/fragment_double_margin"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_speed="4"
        app:lottie_rawRes="@raw/loader_view"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_floating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"
        android:layout_margin="@dimen/activity_horizontal_margin"/>

</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvHeader"
        style="@style/StyleBold"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:text="@string/st_sign_in"
        android:textColor="@color/colorPrimaryText"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/tvTagline"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_item_margin"
        android:text="@string/st_hi_we_are_glad_you_are_here"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        style="@style/StyleMedium"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/fragment_vertical_margin"
        android:text="@string/st_phone_number"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="@+id/tvTagline"
        app:layout_constraintStart_toStartOf="@+id/tvTagline"
        app:layout_constraintTop_toBottomOf="@+id/tvTagline" />

    <View
        android:id="@+id/ivNumberView"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_edittext_height"
        android:layout_marginTop="@dimen/fragment_item_margin"
        android:background="@drawable/drawable_input_edittext_normal"
        app:layout_constraintEnd_toEndOf="@+id/tvPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/tvPhoneNumber"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/tvCountryCode"
        style="@style/StyleMedium"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_edittext_height"
        android:layout_marginStart="@dimen/fragment_item_margin"
        android:focusable="false"
        android:gravity="center"
        app:ccpDialog_allowSearch="true"
        app:ccpDialog_backgroundColor="@color/white"
        app:ccpDialog_textColor="@color/colorPrimaryText"
        app:ccp_contentColor="@color/colorPrimaryText"
        app:ccp_defaultNameCode="US"
        app:ccp_showArrow="false"
        app:ccp_showFlag="true"
        app:ccp_showNameCode="false"
        app:ccp_showPhoneCode="true"
        app:ccp_textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
        app:layout_constraintStart_toStartOf="@+id/ivNumberView"
        app:layout_constraintTop_toTopOf="@id/ivNumberView" />

    <ImageView
        android:id="@+id/ivCodeArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tvCountryCode"
        app:layout_constraintStart_toEndOf="@+id/tvCountryCode"
        app:layout_constraintTop_toTopOf="@+id/tvCountryCode" />

    <View
        android:id="@+id/viewNumber"
        android:layout_width="@dimen/divider_height"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/fragment_default_margin"
        android:layout_marginStart="@dimen/fragment_item_margin"
        android:background="@color/colorEditTextStroke"
        app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
        app:layout_constraintStart_toEndOf="@id/ivCodeArrow"
        app:layout_constraintTop_toTopOf="@id/ivNumberView" />

    <EditText
        android:id="@+id/etNumber"
        style="@style/StyleInputEditText"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        android:layout_marginEnd="@dimen/fragment_small_margin"
        android:background="@color/transparent"
        android:hint="870 987 9087"
        android:inputType="number"
        android:maxLength="15"
        app:layout_constraintBottom_toBottomOf="@id/ivNumberView"
        app:layout_constraintEnd_toEndOf="@id/ivNumberView"
        app:layout_constraintStart_toEndOf="@id/viewNumber"
        app:layout_constraintTop_toTopOf="@id/ivNumberView" />

    <TextView
        android:id="@+id/tvSignUpTagline"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fragment_medium_margin"
        android:text="Donâ€™t have an account? Sign up"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLoginWithFace"
        style="@style/StyleMedium"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/fragment_menu_item_margin"
        android:text="@string/st_login_with_face_id"
        android:drawablePadding="@dimen/drawable_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_face_id"
        app:layout_constraintBottom_toTopOf="@+id/tvSignUpTagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="@dimen/default_material_button_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvLoginWithFace"
        app:cornerRadius="32dp"
        app:strokeColor="@color/colorButtonStroke"
        app:strokeWidth="@dimen/stroke_width"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_google"
        app:iconGravity="textStart"
        app:iconTint="@null"
        android:stateListAnimator="@null"
        android:layout_marginBottom="@dimen/fragment_headline_margin"
        android:backgroundTint="@color/transparent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height_medium"
        android:background="@color/colorSecondaryTextTransparent10"
        app:layout_constraintTop_toTopOf="@+id/tvContinueWith"
        app:layout_constraintBottom_toBottomOf="@+id/tvContinueWith"
        app:layout_constraintStart_toStartOf="@+id/btnGoogle"
        app:layout_constraintEnd_toEndOf="@+id/btnGoogle"/>

    <TextView
        android:id="@+id/tvContinueWith"
        style="@style/StyleMedium"
        android:layout_marginHorizontal="@dimen/fragment_default_margin"
        android:layout_marginBottom="@dimen/fragment_headline_margin"
        android:text="@string/st_or_continue_with"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorSecondaryTextTransparent50"
        android:paddingHorizontal="@dimen/body_margin"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/StyleSubmitButton"
        android:text="@string/st_get_verification_code"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/header_margin"
        app:layout_constraintEnd_toEndOf="@+id/btnGoogle"
        app:layout_constraintStart_toStartOf="@+id/btnGoogle"
        app:layout_constraintBottom_toTopOf="@+id/tvContinueWith"/>

</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
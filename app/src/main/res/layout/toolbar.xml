<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:theme="@style/DarkSearchViewTheme">

        <TextView
            android:id="@+id/tvToolbarTitle"
            style="@style/StyleToolbarTitle"/>

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvUserImage"
            android:layout_width="@dimen/fragment_vertical_margin"
            android:layout_height="@dimen/fragment_vertical_margin"
            app:roundAsCircle="true"
            android:visibility="gone"
            app:placeholderImage="@drawable/ic_user_placeholder"/>

    </androidx.appcompat.widget.Toolbar>
</FrameLayout>

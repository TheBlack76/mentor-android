<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clTimeHeader"
    android:visibility="gone"
    android:paddingHorizontal="@dimen/activity_horizontal_margin"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="@dimen/fragment_default_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toTopOf="@+id/tvTimeHeader"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/fragment_medium_margin"
        app:layout_constraintEnd_toStartOf="@+id/tvTimeHeader"/>

    <TextView
        android:id="@+id/tvTimeHeader"
        style="@style/StyleMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:visibility="visible"
        android:paddingVertical="@dimen/line_spacing_extra"
        android:background="@drawable/drawable_black_round_stroke"
        android:backgroundTint="@color/colorDivider"
        android:text="Today"
        android:paddingHorizontal="@dimen/fragment_default_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/colorPrimaryText" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toTopOf="@+id/tvTimeHeader"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeHeader"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/fragment_medium_margin"
        app:layout_constraintStart_toEndOf="@+id/tvTimeHeader"/>


</androidx.constraintlayout.widget.ConstraintLayout>
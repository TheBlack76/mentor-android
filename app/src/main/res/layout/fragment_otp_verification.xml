<?xml version="1.0" encoding="utf-8"?>
<com.mentor.application.views.comman.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <include
        android:id="@+id/appBarLayout"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/tvHeader"
        style="@style/StyleBold"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/line_spacing_extra"
        android:text="@string/st_verification"
        android:textColor="@color/colorPrimaryText"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

    <TextView
        android:id="@+id/tvTagline"
        style="@style/StyleRegular"
        android:layout_width="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/fragment_item_margin"
        android:text="@string/st_otp_verification_tagline"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <com.mukeshsolanki.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:itemBackground="@drawable/drawable_input_otp_box_selector"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="@font/font_roboto_medium"
        app:OtpItemCount="4"
        android:imeOptions="actionDone"
        app:OtpItemSpacing="@dimen/_18sdp"
        app:OtpItemWidth="@dimen/_50sdp"
        app:OtpItemHeight="@dimen/_58sdp"
        app:OtpViewType="none"
        android:layout_marginTop="@dimen/header_margin"
        app:layout_constraintTop_toBottomOf="@+id/tvTagline"
        app:layout_constraintStart_toStartOf="@id/tvTagline"
        app:layout_constraintEnd_toEndOf="@id/tvTagline"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        style="@style/StyleSubmitButton"
        android:text="@string/st_verify_otp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/tvTagline"
        app:layout_constraintStart_toStartOf="@+id/tvTagline"
        app:layout_constraintTop_toBottomOf="@+id/otp_view"
        android:layout_marginTop="@dimen/fragment_vertical_margin"/>

    <TextView
        style="@style/StyleRegular"
        android:id="@+id/tvAlreadyRegistered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvResend"
        android:textColor="@color/colorPrimaryText"
        android:text="@string/st_re_send_code_in"
        android:layout_marginTop="@dimen/body_margin"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

    <TextView
        style="@style/StyleMedium"
        android:id="@+id/tvResend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        app:layout_constraintStart_toEndOf="@+id/tvAlreadyRegistered"
        android:layout_marginTop="@dimen/body_margin"
        android:textColor="@color/colorPrimary"
        android:text="0:20"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>


</com.mentor.application.views.comman.utils.SlidingConstraintLayout>
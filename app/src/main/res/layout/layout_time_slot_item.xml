<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/fragment_item_margin"
    android:layout_marginHorizontal="@dimen/line_spacing_extra">

    <TextView
        android:id="@+id/tvSlotsTime"
        android:layout_width="0dp"
        android:layout_height="@dimen/fragment_vertical_margin"
        android:gravity="center"
        android:text="09:00am - 10:00am"
        android:paddingTop="0dp"
        android:background="@drawable/drawable_small_round_stroke_normal"
        android:fontFamily="@font/font_roboto_regular"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>